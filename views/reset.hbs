<section class="mt-5 container">
    <div class="row justify-content-center">
        <h2 class="my-5 text-center">Recuperación de Contraseña</h2>
        <p class="text-center">Bienvenido {{tokenStatus.nombre}}</p>
        <div class="col-10 col-lg-5">
            <form action="/prov/reset/{{token}}" method="post" class="border border-dark rounded p-4">
                <input class="form-control mt-3" type="password" maxlength="15" placeholder="Type New Pass" autocomplete="new-password" name="password_1" autofocus>
                <div id="passwordHelpBlock" class="form-text mb-4">
                    Su clave debe tener de 8 a 15 caracteres de longitud.
                </div>
                <input class="form-control" type="password" maxlength="15" placeholder="Repeat New Pass" autocomplete="new-password" name="password_2">
                <div id="repeatPasswordHelpBlock" class="form-text mb-5">
                    Ambas claves deben ser idénticas.
                </div>

                {{#each arrWarnings}}
                <div class="alert alert-danger" role="alert">
                    {{msg}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>    
                {{/each}}

                <div class="d-flex justify-content-center">
                    <input type="submit" class="btn btn-success" value="send new password">
                </div>
                
            </form>
        </div>
    </div>
</section>